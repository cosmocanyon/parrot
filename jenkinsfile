pipeline {
    agent any
/*
    environment {
        EMAIL_TO2 = 'paolo.vismara@certimeter.it'
    }
*/
    stages {
        stage('Check') {
            steps {
                echo 'Any checking...'
            }
        }

        stage('Build') {
            steps {
                echo 'building...'
                sh '''
                    g++ -c main.cpp
                    g++ -o main.sh main.o
                '''
            }
        }

        stage('Test') {
            steps {
                echo 'testing...'
                sh './main.sh Ciao a tutti'
            }
        }
        
        stage('Release') {
            steps {
                echo 'Releasing...'
            }
        }
    }

    post {  
        success {
/*                        
            emailext body: 'Check console output at $BUILD_URL to view the results. \n\n ${CHANGES} \n\n -------------------------------------------------- \n${BUILD_LOG, maxLines=100, escapeHtml=false}', 
            to: "${EMAIL_TO2}", 
            subject: 'Build succeded in Jenkins: $PROJECT_NAME - #$BUILD_NUMBER'
*/
            //mail bcc: '', body: 'test', cc: '', from: '', replyTo: '', subject: 'test', to: 'paolo.vismara@certimeter.it'
        }  

        failure {  
/*
            emailext body: 'Check console output at $BUILD_URL to view the results. \n\n ${CHANGES} \n\n -------------------------------------------------- \n${BUILD_LOG, maxLines=100, escapeHtml=false}', 
                to: "${EMAIL_TO2}", 
                subject: 'Build failed in Jenkins: $PROJECT_NAME - #$BUILD_NUMBER'
*/
        }
        aborted {
/*
            emailext body: 'Check console output at $BUILD_URL to view the results. \n\n ${CHANGES} \n\n -------------------------------------------------- \n${BUILD_LOG, maxLines=100, escapeHtml=false}', 
                to: "${EMAIL_TO2}", 
                subject: 'Build aborted in Jenkins: $PROJECT_NAME - #$BUILD_NUMBER'
*/
        }  
        //unstable {}  
        //changed {}  
     }  
}
