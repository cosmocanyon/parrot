pipeline {
    agent any

    environment {
        EMAIL_TO2 = 'paolo.vismara@certimeter.it'
    }

    stages {
        stage('Check') {
            steps {
                echo 'Any checking...'
            }
        }

        stage('Build') {
            steps {
                echo 'building...'
                sh '''
                    g++ -c main.cpp
                    g++ -o main.sh main.o
                '''
            }
        }

        stage('Test') {
            steps {
                echo 'testing...'
                sh './main.sh Ciao a tutti'
            }
        }
        
        stage('Release') {
            steps {
                echo 'Releasing...'
            }
        }
    }

    post {  
        success {            
            mail bcc: '', 
                body: "<b>Example</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL build: ${env.BUILD_URL}", 
                cc: '', 
                charset: 'UTF-8', 
                from: '', 
                mimeType: 'text/html', 
                replyTo: '', 
                subject: "SUCCESS: Project name -> ${env.JOB_NAME}", 
                to: "$EMAIL_TO2";  
        }  
        failure {  
            mail bcc: '', 
                body: "<b>Example</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL build: ${env.BUILD_URL}", 
                cc: '', 
                charset: 'UTF-8', 
                from: '', 
                mimeType: 'text/html', 
                replyTo: '', 
                subject: "FAILED: Project name -> ${env.JOB_NAME}", 
                to: "$EMAIL_TO";  
        }
        aborted {
            mail bcc: '', 
                body: "<b>Example</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL build: ${env.BUILD_URL}", 
                cc: '', 
                charset: 'UTF-8', 
                from: '', 
                mimeType: 'text/html', 
                replyTo: '', 
                subject: "ABORTED: Project name -> ${env.JOB_NAME}", 
                to: "$EMAIL_TO";  
        }  
        //unstable {}  
        //changed {}  
     }  
}
