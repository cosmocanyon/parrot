pipeline {
    agent any
/*
    environment {
        EMAIL_TO2 = 'paolo.vismara@certimeter.it'
    }
*/
    stages {
        stage('Check') {
            steps {
                echo 'Any checking...'
            }
        }

        stage('Build') {
            steps {
                echo 'building...'
                sh '''
                    g++ -c main.cpp
                    g++ -o main.sh main.o
                '''
            }
        }

        stage('Test') {
            steps {
                echo 'testing...'
                sh './main.sh Ciao a tutti'
            }
        }
        
        stage('Release') {
            steps {
                echo 'Releasing...'
            }
        }
    }

    post {  
        always {
            emailext body: 'A Test EMail', recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']], subject: 'Test'
        }  
     }  
}
